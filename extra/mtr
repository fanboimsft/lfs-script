pkgbuild_version=5
pkgname=mtr
pkgver=git
giturl=https://github.com/traviscross/mtr

dependencies=(
    "!$pkgname"
)

lfs_me_prepare() {

	cd ${build_dir}
	git clone $giturl
	cd $pkgname
	./bootstrap.sh
	./configure --prefix=/usr
}

lfs_me_build() {
	cd "${build_dir}/${pkgname}"
	make
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}"
	make DESTDIR=${fakeroot_dir} install
}
